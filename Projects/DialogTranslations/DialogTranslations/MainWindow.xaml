<Window x:Class="DialogTranslations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:DialogTranslations.Views"
        Title="Translation Documen Generator"  Height="200" Width="775">
    <Grid>

        <TabControl HorizontalAlignment="Left"  VerticalAlignment="Top" >
            <TabItem Header="Individual Directory">
                <Grid Background="#FFE5E5E5">
                    <Views:SelectTranslationDirectories />
                </Grid>
                
            </TabItem>
            <TabItem Header="Choose Entire Language">
                <Grid Background="#FFE5E5E5">
                    <Views:ChooseLanguageDirectories />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
